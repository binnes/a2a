# Containerfile for MCP Server
# Built with Podman for local deployment

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code with __init__.py files
COPY config/__init__.py ./config/
COPY config/settings.py ./config/
COPY services/__init__.py ./services/
COPY services/*.py ./services/
COPY mcp_server/__init__.py ./mcp_server/
COPY mcp_server/*.py ./mcp_server/

# Expose MCP server port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run MCP server
CMD ["python", "-m", "mcp_server.server"]

