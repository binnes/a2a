# Containerfile for Data Loader Job
# Built with Podman for IBM Code Engine deployment
# Loads Shakespeare text into Milvus automatically

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY config/ ./config/
COPY services/ ./services/
COPY data/reference/ ./data/reference/

# Copy data loader script
COPY deployment/ibm-code-engine/data-loader/load_data.py .

# Run data loader
CMD ["python", "load_data.py"]

# Made with Bob